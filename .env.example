# Nexus Environment Variables
# Copy this file to .env and customize for your environment

# Environment
NEXUS_ENV=development

# Debug settings
NEXUS_DEBUG=true
NEXUS_LOG_LEVEL=DEBUG

# Directories
NEXUS_DOCS_DIR=./dev-docs
NEXUS_CACHE_DIR=./.nexus/cache
NEXUS_LOGS_DIR=./.nexus/logs

# Execution settings
NEXUS_MAX_PARALLEL=2
NEXUS_TIMEOUT=600

# Server settings
NEXUS_SERVER_HOST=localhost
NEXUS_SERVER_PORT=8000

# Feature flags
NEXUS_FEATURE_AUTO_RELOAD=true
NEXUS_FEATURE_DEBUG_MODE=true
NEXUS_FEATURE_EXPERIMENTAL_FEATURES=true
